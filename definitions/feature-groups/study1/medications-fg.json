      "dataType": "dateTime",
      "fhirPath": "MedicationStatement.effective.start"
    },
    {
      "name": "medicationCode",
      "title": "Medication code (ATC)",
      "description": "ATC code for the medication",
      "dataType": "code",
      "fhirPath": "MedicationStatement.medicationCodeableConcept.coding.where(system='http://www.whocc.no/atc').code.first()"
    },
    {
      "name": "dose",
      "title": "Medication dose",
      "description": "ATC code for the medication",
      "dataType": "decimal",
      "fhirPath": "MedicationStatement.dosage.first().doseAndRate.first().doseQuantity.value"
