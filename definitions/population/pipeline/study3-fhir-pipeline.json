{
  "id": "study3_cohort",
  "resourceType": "PopulationPipeline",
  "url": "https://datatools4heart.eu/cohorts/study3",
  "name": "study3_cohort",
  "title": "Ambulatory Patients with Primary Diagnosis of Heart Failure",
  "description": "This cohort includes ambulatory patients hospitalized with a primary discharge diagnosis of heart failure for the first time. The primary discharge diagnosis refers to the main clinical condition responsible for the hospital admission.",
  "version": "1.0",
  "date": "2025-09-24",
  "status": "active",
  "publisher": "DataTools4Heart/AI4HF Team (SRDC Corp.)",
  "interface": "fhir",
  "supportedVersions": [
    "R5"
  ],
  "entry": [
    {
      "name": "patientEncounter",
      "description": "Captures hospital encounters when a patient is admitted for care.",
      "resourceType": "Encounter",
      "query": "?class=AMB",
      "entityLink": [
        {
          "entity": "pid",
          "entityType": "Patient",
          "searchParam": "patient",
          "path": "Encounter.subject.reference"
        }
      ],
      "eventTime": "Encounter.actualPeriod.start",
      "exitTime": "(Encounter.actualPeriod.end.toDate() | (Encounter.actualPeriod.start.substring(0, 10).toDate() + 1 days)).first()"
    }
  ],
  "eligibility": [
    {
      "name": "withHeartFailure",
      "description": "Filters patients with a diagnosis of heart failure during the hospital encounter.",
      "criteria": [
        {
          "resourceType": "Condition",
          "category": "inclusion",
          "query": "?category=encounter-diagnosis&code:below=http://hl7.org/fhir/sid/icd-10|I50,http://hl7.org/fhir/sid/icd-10|I11.0,http://hl7.org/fhir/sid/icd-10|I13.0,http://hl7.org/fhir/sid/icd-10|I13.2,http://hl7.org/fhir/sid/icd-10|I26.0,http://hl7.org/fhir/sid/icd-10|I09.81,http://hl7.org/fhir/sid/icd-10|I97.13",
          "entityLink": [
            {
              "entity": "pid",
              "entityType": "Patient",
              "searchParam": "patient",
              "path": "Condition.subject.reference"
            }
          ]
        },
        {
          "resourceType": "Patient",
          "category": "exclusion",
          "entityLink": [
            {
              "entity": "pid",
              "entityType": "Patient",
              "searchParam": "patient",
              "path": "Patient.id"
            }
          ],
          "timeConstraint": {
            "path": "birthDate + 18 years",
            "start": "%eventTime"
          }
        }
      ]
    }
  ]
}
