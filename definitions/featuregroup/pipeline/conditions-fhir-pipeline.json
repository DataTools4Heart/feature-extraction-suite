{
  "id": "conditions",
  "resourceType": "FeatureGroupPipeline",
  "url": "https://datatools4heart.eu/feature-groups/conditions",
  "name": "conditions",
  "title": "Conditions",
  "description": "Condition",
  "status": "active",
  "date": "2025-07-24",
  "publisher": "DataTools4Heart/AI4HF Team (SRDC Corp.)",
  "interface": "fhir",
  "supportedVersions": [
    "R5"
  ],
  "pipeline": [
    {
      "description": "Extract the features from Condition.",
      "resourceType": "Condition",
      "targetProfile": "https://datatools4heart.eu/fhir/StructureDefinition/HFR-Condition",
      "query": "?clinical-status=active",
      "entityLink": [
        {
          "entity": "pid",
          "entityType": "Patient",
          "searchParam": "patient",
          "path": "Condition.subject.reference"
        },
        {
          "entity": "encounterId",
          "entityType": "Encounter",
          "searchParam": "encounter",
          "path": "Condition.encounter.reference"
        }
      ],
      "feature": [
        {
          "name": "icd10Codes",
          "path": "Condition.code.coding.where(system='http://hl7.org/fhir/sid/icd-10').code"
        },
        {
          "name": "date",
          "path": "Condition.onsetDateTime"
        }
      ]
    }
  ]
}
