{
  "id": "encounters",
  "resourceType": "FeatureGroupPipeline",
  "url": "https://datatools4heart.eu/feature-groups/encounters",
  "name": "encounters",
  "title": "Encounters",
  "description": "Encounter related features",
  "status": "active",
  "date": "2025-07-24",
  "publisher": "DataTools4Heart/AI4HF Team (SRDC Corp.)",
  "interface": "fhir",
  "supportedVersions": [
    "R5"
  ],
  "pipeline": [
    {
      "description": "Extract the features from Encounter.",
      "resourceType": "Encounter",
      "targetProfile": "https://datatools4heart.eu/fhir/StructureDefinition/HFR-Encounter",
      "entityLink": [
        {
          "entity": "pid",
          "entityType": "Patient",
          "searchParam": "patient",
          "path": "Encounter.subject.reference"
        },
        {
          "entity": "encounterId",
          "entityType": "Encounter",
          "searchParam": "_id",
          "path": "Encounter.id"
        }
      ],
      "feature": [
        {
          "name": "startTime",
          "path": "Encounter.actualPeriod.start"
        },
        {
          "name": "endTime",
          "path": "Encounter.actualPeriod.end"
        },
        {
          "name": "admissionYear",
          "path": "Encounter.actualPeriod.start.toString().substring(0,4)"
        },
        {
          "name": "encounterClass",
          "path": "Encounter.class.coding.where(system='http://terminology.hl7.org/CodeSystem/v3-ActCode').code.first()"
        },
        {
          "name": "department",
          "path": "Encounter.serviceType.concept.coding.where(system='http://snomed.info/sct').code.first()"
        }
      ]
    }
  ]
}
