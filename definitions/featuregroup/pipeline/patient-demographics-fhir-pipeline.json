{
  "id": "patient_demographics",
  "resourceType": "FeatureGroupPipeline",
  "url": "https://datatools4heart.eu/feature-groups/patient_demographics",
  "name": "patient_demographics",
  "title": "Patient demographics",
  "description": "Patient demographics",
  "status": "active",
  "date": "2025-07-24",
  "publisher": "DataTools4Heart/AI4HF Team (SRDC Corp.)",
  "interface": "fhir",
  "supportedVersions": [
    "R5"
  ],
  "pipeline": [
    {
      "description": "Extract the features from Patient resource.",
      "resourceType": "Patient",
      "targetProfile": "https://datatools4heart.eu/fhir/StructureDefinition/HFR-Patient",
      "entityLink": [
        {
          "entity": "pid",
          "entityType": "Patient",
          "searchParam": "_id",
          "path": "Patient.id"
        }
      ],
      "feature": [
        {
          "name": "sourceIdentifier",
          "path": "Patient.identifier.value.first()"
        },
        {
          "name": "gender",
          "path": "Patient.gender"
        },
        {
          "name": "birthDate",
          "path": "Patient.birthDate"
        },
        {
          "name": "deceasedDateTime",
          "path": "Patient.deceasedDateTime"
        }
      ]
    }
  ]
}
