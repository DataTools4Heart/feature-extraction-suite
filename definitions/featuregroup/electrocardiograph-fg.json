{
  "url": "https://datatools4heart.eu/feature-groups/study1/electrocardiographs",
  "name": "electrocardiographs",
  "title": "Electrocardiographs",
  "description": "Electrocardiograph related features",
  "version": "0.1",
  "status": "draft",
  "date": "2025-02-20",
  "publisher": "DataTools4Heart WP2 Team (SRDC Corp.)",
  "entity": [
    {
      "name": "pid",
      "description": "A unique identifier assigned to each patient in the cohort."
    },
    {
      "name": "encounterId",
      "description": "A unique identifier for each hospital encounter."
    }
  ],
  "feature": [
    {
      "name": "time",
      "title": "Observation time",
      "description": "Time of measurement",
      "dataType": "dateTime"
    },
    {
      "name": "ecg_qrs_duration",
      "title": "QRS duration",
      "description": "QRS duration",
      "dataType": "decimal"
    },
    {
      "name": "ecg_qrs_axis",
      "title": "QRS axis",
      "description": "QRS axis",
      "dataType": "decimal"
    },
    {
      "name": "ecg_qt_duration_corrected",
      "title": "Q-T interval corrected",
      "description": "Normalized value for individual QT measurement from a given study into a single measurement that would represent the QT interval if the patient had a heart rate of 60 beats per minute",
      "dataType": "decimal"
    },
    {
      "name": "ecg_st",
      "title": "ST-elevation",
      "description": "ST-elevation",
      "dataType": "boolean"
    },
    {
      "name": "ecg_ischemia_without_st",
      "title": "Ischemia without st-elevation",
      "description": "Ischemia without st-elevation",
      "dataType": "boolean"
    },
    {
      "name": "ecg_type_of_rhythm",
      "title": "Type of rhythm",
      "description": "Type of rhythm",
      "dataType": "code"
    }
  ],
  "eventTime": {
    "start": "time"
  },
  "pipeline": [
    {
      "interface": "FHIR",
      "supportedVersions": [
        "R5"
      ],
      "pipeline": [
        {
          "description": "Extract the features from Echocardiograph Observation.",
          "resourceType": "Observation",
          "targetProfile": "https://datatools4heart.eu/fhir/StructureDefinition/HFR-Electrocardiograph",
          "query": "?code=http://loinc.org|34534-8",
          "entityLink": [
            {
              "entity": "pid",
              "entityType": "Patient",
              "searchParam": "patient",
              "path": "Observation.subject.reference"
            },
            {
              "entity": "encounterId",
              "entityType": "Encounter",
              "searchParam": "encounter",
              "path": "Observation.encounter.reference"
            }
          ],
          "feature": [
            {
              "name": "time",
              "path": "Observation.effectiveDateTime"
            },
            {
              "name": "ecg_qrs_duration",
              "path": "Observation.component.where(code.coding.exists(system='http://loinc.org' and code='8633-0')).valueQuantity.value.first()"
            },
            {
              "name": "ecg_qrs_axis",
              "path": "Observation.component.where(code.coding.exists(system='http://loinc.org' and code='8632-2')).valueQuantity.value.first()"
            },
            {
              "name": "ecg_qt_duration_corrected",
              "path": "Observation.component.where(code.coding.exists(system='http://loinc.org' and code='8636-3')).valueQuantity.value.first()"
            },
            {
              "name": "ecg_st",
              "path": "Observation.component.where(code.coding.exists(system='http://snomed.info/sct' and code='164931005')).valueBoolean"
            },
            {
              "name": "ecg_ischemia_without_st",
              "path": "Observation.component.where(code.coding.exists(system='http://snomed.info/sct' and code='52674009')).valueBoolean"
            },
            {
              "name": "ecg_type_of_rhythm",
              "path": "Observation.component.where(code.coding.exists(system='http://loinc.org' and code='76281-5')).valueCodeableConcept.coding.where(system='http://loinc.org').first().code"
            }
          ]
        }
      ]
    }
  ]
}


