{
  "url": "https://datatools4heart.eu/feature-groups/study1/cause_of_death",
  "name": "cause_of_death",
  "title": "Cause of death",
  "description": "This feature group contains the feature that indicates the cause of death",
  "version": "0.1",
  "status": "draft",
  "date": "2025-02-20",
  "publisher": "DataTools4Heart WP2 Team (SRDC Corp.)",
  "entity": [
    {
      "name": "pid",
      "description": "A unique identifier assigned to each patient in the cohort."
    },
    {
      "name": "encounterId",
      "description": "A unique identifier for each hospital encounter."
    }
  ],
  "feature": [
    {
      "name": "causeOfDeath",
      "title": "Cause of death",
      "description": "ICD10 code of the condition as the cause of death",
      "dataType": "code"
    },
    {
      "name": "time",
      "title": "Observation time",
      "description": "Time of measurement",
      "dataType": "dateTime"
    }
  ],
  "eventTime": {
    "start": "time"
  },
  "pipeline": [
    {
      "interface": "FHIR",
      "supportedVersions": [
        "R5"
      ],
      "pipeline": [
        {
          "description": "Extract the features from CauseOfDeath Observation.",
          "resourceType": "Observation",
          "targetProfile": "https://datatools4heart.eu/fhir/StructureDefinition/HFR-CauseOfDeath",
          "query": "?code=http://loinc.org|79378-6",
          "entityLink": [
            {
              "entity": "pid",
              "entityType": "Patient",
              "searchParam": "patient",
              "path": "Observation.subject.reference"
            },
            {
              "entity": "encounterId",
              "entityType": "Encounter",
              "searchParam": "encounter",
              "path": "Observation.encounter.reference"
            }
          ],
          "feature": [
            {
              "name": "causeOfDeath",
              "path": "Observation.valueCodeableConcept.coding.where(system='http://hl7.org/fhir/sid/icd-10').first().code"
            },
            {
              "name": "time",
              "path": "Observation.effectiveDateTime"
            }
          ]
        }
      ]
    }
  ]
}
