{
  "url": "https://datatools4heart.eu/feature-groups/study1/medications",
  "name": "med",
  "title": "Medications",
  "description": "Medication related features",
  "version": "0.1",
  "status": "draft",
  "date": "2024-01-16",
  "publisher": "DataTools4Heart WP2 Team (SRDC Corp.)",
  "entity": [
    {
      "name": "pid",
      "description": "A unique identifier assigned to each patient in the cohort."
    },
    {
      "name": "encounterId",
      "description": "A unique identifier for each hospital encounter."
    }
  ],
  "feature": [
    {
      "name": "medicationCode",
      "title": "Medication code (ATC)",
      "description": "ATC code for the medication",
      "dataType": "code"
    }
  ],
  "pipeline": [
    {
      "interface": "FHIR",
      "supportedVersions": [
        "R5"
      ],
      "pipeline": [
        {
          "description": "Extract the features from Medications.",
          "resourceType": "MedicationAdministration",
          "targetProfile": "https://datatools4heart.eu/fhir/StructureDefinition/HFR-MedicationAdministration",
          "entityLink": [
            {
              "entity": "pid",
              "entityType": "Patient",
              "searchParam": "patient",
              "path": "MedicationAdministration.subject.reference"
            },
            {
              "entity": "encounterId",
              "entityType": "Encounter",
              "searchParam": "encounter",
              "path": "MedicationAdministration.encounter.reference"
            }
          ],
          "feature": [
            {
              "name": "medicationCode",
              "path": "MedicationAdministration.medication.concept.coding.where(system='http://www.whocc.no/atc').code.first()"
            }
          ]
        }
      ]
    }
  ]
}
