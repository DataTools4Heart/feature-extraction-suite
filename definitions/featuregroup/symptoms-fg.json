{
  "url": "https://datatools4heart.eu/feature-groups/study1/symptoms",
  "name": "symptoms",
  "title": "Symptoms",
  "description": "Symptom related features",
  "version": "0.1",
  "status": "draft",
  "date": "2025-02-20",
  "publisher": "DataTools4Heart WP2 Team (SRDC Corp.)",
  "entity": [
    {
      "name": "pid",
      "description": "A unique identifier assigned to each patient in the cohort."
    },
    {
      "name": "encounterId",
      "description": "A unique identifier for each hospital encounter."
    }
  ],
  "feature": [
    {
      "name": "time",
      "title": "Observation time",
      "description": "Time of measurement",
      "dataType": "dateTime"
    },
    {
      "name": "code",
      "title": "Snomed code for the symptom",
      "description": "Snomed code for the symptom",
      "dataType": "code"
    },
    {
      "name": "display",
      "title": "Name of the symptom",
      "description": "Name of the symptom",
      "dataType": "string"
    }
  ],
  "eventTime": {
    "start": "time"
  },
  "pipeline": [
    {
      "interface": "FHIR",
      "supportedVersions": [
        "R5"
      ],
      "pipeline": [
        {
          "description": "Extract the features from Symptom Observation.",
          "resourceType": "Observation",
          "targetProfile": "https://datatools4heart.eu/fhir/StructureDefinition/HFR-Symptom",
          "query": "?category=http://hl7.org/fhir/ValueSet/observation-category|survey&code:in=https://datatools4heart.eu/fhir/ValueSet/symptom",
          "entityLink": [
            {
              "entity": "pid",
              "entityType": "Patient",
              "searchParam": "patient",
              "path": "Observation.subject.reference"
            },
            {
              "entity": "encounterId",
              "entityType": "Encounter",
              "searchParam": "encounter",
              "path": "Observation.encounter.reference"
            }
          ],
          "feature": [
            {
              "name": "time",
              "path": "Observation.effectiveDateTime"
            },
            {
              "name": "code",
              "path": "Observation.code.coding.where(system='http://snomed.info/sct').first().code"
            },
            {
              "name": "display",
              "path": "Observation.code.coding.where(system='http://snomed.info/sct').first().display"
            }
          ]
        }
      ]
    }
  ]
}

