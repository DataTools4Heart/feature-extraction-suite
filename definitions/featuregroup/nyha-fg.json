{
  "url": "https://datatools4heart.eu/feature-groups/study1/nyha",
  "name": "nyha",
  "title": "New York Heart Assessment features",
  "description": "NYHA related features",
  "version": "0.1",
  "status": "draft",
  "date": "2024-01-15",
  "publisher": "DataTools4Heart WP2 Team (SRDC Corp.)",
  "entity": [
    {
      "name": "pid",
      "description": "A unique identifier assigned to each patient in the cohort."
    },
    {
      "name": "encounterId",
      "description": "A unique identifier for each hospital encounter."
    }
  ],
  "feature": [
    {
      "name": "nyha",
      "title": "NYHA Value",
      "description": "Value of the New York Heart Assessment as LOINC Code",
      "dataType": "code"
    }
  ],
  "pipeline": [
    {
      "interface": "FHIR",
      "supportedVersions": [
        "R5"
      ],
      "pipeline": [
        {
          "description": "Extract the features from NYHA Observation.",
          "resourceType": "Observation",
          "targetProfile": "https://datatools4heart.eu/fhir/StructureDefinition/HFR-NYHAAssessment",
          "query": "?code=http://loinc.org|88020-3",
          "entityLink": [
            {
              "entity": "pid",
              "entityType": "Patient",
              "searchParam": "patient",
              "path": "Observation.subject.reference"
            },
            {
              "entity": "encounterId",
              "entityType": "Encounter",
              "searchParam": "encounter",
              "path": "Observation.encounter.reference"
            }
          ],
          "feature": [
            {
              "name": "nyha",
              "path": "Observation.valueCodeableConcept.coding.where(system='http://loinc.org').first().code"
            }
          ]
        }
      ]
    }
  ]
}
