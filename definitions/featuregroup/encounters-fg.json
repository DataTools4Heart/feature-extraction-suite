{
  "url": "https://datatools4heart.eu/feature-groups/study1/encounters",
  "name": "encounters",
  "title": "Encounters",
  "description": "Encounter related features",
  "version": "0.1",
  "status": "draft",
  "date": "2025-02-20",
  "publisher": "DataTools4Heart WP2 Team (SRDC Corp.)",
  "entity": [
    {
      "name": "pid",
      "description": "A unique identifier assigned to each patient in the cohort."
    },
    {
      "name": "encounterId",
      "description": "A unique identifier for each hospital encounter."
    }
  ],
  "feature": [
    {
      "name": "startTime",
      "title": "Encounter start time ",
      "description": "Encounter start time",
      "dataType": "dateTime"
    },
    {
      "name": "endTime",
      "title": "Encounter end time ",
      "description": "Encounter end time",
      "dataType": "dateTime"
    },
    {
      "name": "admissionYear",
      "title": "Year of the admission time ",
      "description": "Year of the admission time",
      "dataType": "string"
    },
    {
      "name": "encounterType",
      "title": "Encounter type",
      "description": "Type of this encounter",
      "dataType": "id"
    },
    {
      "name": "encounterClass",
      "title": "Encounter class",
      "description": "Class of this encounter",
      "dataType": "string"
    },
    {
      "name": "primaryReasonCode",
      "title": "Primary reason code",
      "description": "ICD 10 code of the primary reason for the encounter",
      "dataType": "string"
    }
  ],
  "eventTime": {
    "start": "startTime",
    "end": "endTime"
  },
  "pipeline": [
    {
      "interface": "FHIR",
      "supportedVersions": [
        "R5"
      ],
      "pipeline": [
        {
          "description": "Extract the features from Encounter.",
          "resourceType": "Encounter",
          "targetProfile": "https://datatools4heart.eu/fhir/StructureDefinition/HFR-Encounter",
          "entityLink": [
            {
              "entity": "pid",
              "entityType": "Patient",
              "searchParam": "patient",
              "path": "Encounter.subject.reference"
            },
            {
              "entity": "encounterId",
              "entityType": "Encounter",
              "searchParam": "_id",
              "path": "Encounter.id"
            }
          ],
          "feature": [
            {
              "name": "startTime",
              "path": "Encounter.actualPeriod.start"
            },
            {
              "name": "endTime",
              "path": "Encounter.actualPeriod.end"
            },
            {
              "name": "admissionYear",
              "path": "Encounter.actualPeriod.start.toString().substring(0,4)"
            },
            {
              "name": "encounterType",
              "path": "Encounter.type.coding.where(system='http://snomed.info/sct').code.first()"
            },
            {
              "name": "encounterClass",
              "path": "Encounter.class.coding.where(system='http://terminology.hl7.org/CodeSystem/v3-ActCode').code.first()"
            },
            {
              "name": "primaryReasonCode",
              "path": "Encounter.reason.use.coding.where(system='http://hl7.org/fhir/sid/icd-10').code.first()"
            }
          ]
        }
      ]
    }
  ]
}
