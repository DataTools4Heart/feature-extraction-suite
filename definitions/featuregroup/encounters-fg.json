{
  "url": "https://datatools4heart.eu/feature-groups/study1/encounters",
  "name": "encounters",
  "title": "Encounters",
  "description": "Encounter related features",
  "version": "0.1",
  "status": "draft",
  "date": "2025-01-21",
  "publisher": "DataTools4Heart WP2 Team (SRDC Corp.)",
  "entity": [
    {
      "name": "pid",
      "description": "A unique identifier assigned to each patient in the cohort."
    },
    {
      "name": "encounterId",
      "description": "A unique identifier for each hospital encounter."
    }
  ],
  "feature": [
    {
      "name": "startTime",
      "title": "Encounter start time ",
      "description": "Encounter start time",
      "dataType": "dateTime"
    },
    {
      "name": "endTime",
      "title": "Encounter end time ",
      "description": "Encounter end time",
      "dataType": "dateTime"
    }
  ],
  "eventTime": {
    "start": "startTime",
    "end": "endTime"
  },
  "pipeline": [
    {
      "interface": "FHIR",
      "supportedVersions": [
        "R5"
      ],
      "pipeline": [
        {
          "description": "Extract the features from Encounter.",
          "resourceType": "Encounter",
          "targetProfile": "https://datatools4heart.eu/fhir/StructureDefinition/HFR-Encounter",
          "entityLink": [
            {
              "entity": "pid",
              "entityType": "Patient",
              "searchParam": "patient",
              "path": "Encounter.subject.reference"
            },
            {
              "entity": "encounterId",
              "entityType": "Encounter",
              "searchParam": "_id",
              "path": "Encounter.id"
            }
          ],
          "feature": [
            {
              "name": "startTime",
              "path": "Encounter.actualPeriod.start"
            },
            {
              "name": "endTime",
              "path": "Encounter.actualPeriod.end"
            }
          ]
        }
      ]
    }
  ]
}
