{
  "url": "https://datatools4heart.eu/feature-groups/study1/echocardiographs",
  "name": "echocardiographs",
  "title": "Echocardiographs",
  "description": "Echocardiograph related features",
  "version": "0.1",
  "status": "draft",
  "date": "2025-02-17",
  "publisher": "DataTools4Heart WP2 Team (SRDC Corp.)",
  "entity": [
    {
      "name": "pid",
      "description": "A unique identifier assigned to each patient in the cohort."
    },
    {
      "name": "encounterId",
      "description": "A unique identifier for each hospital encounter."
    }
  ],
  "feature": [
    {
      "name": "time",
      "title": "Observation time",
      "description": "Time of measurement",
      "dataType": "dateTime"
    },
    {
      "name": "lvef",
      "title": "Left ventricular ejection fraction",
      "description": "Left ventricular Ejection fraction by 2D echo",
      "dataType": "decimal"
    }
  ],
  "eventTime": {
    "start": "time"
  },
  "pipeline": [
    {
      "interface": "FHIR",
      "supportedVersions": [
        "R5"
      ],
      "pipeline": [
        {
          "description": "Extract the features from Echocardiograph.",
          "resourceType": "Observation",
          "targetProfile": "https://datatools4heart.eu/fhir/StructureDefinition/HFR-Echocardiograph",
          "entityLink": [
            {
              "entity": "pid",
              "entityType": "Patient",
              "searchParam": "patient",
              "path": "Observation.subject.reference"
            },
            {
              "entity": "encounterId",
              "entityType": "Encounter",
              "searchParam": "encounter",
              "path": "Observation.encounter.reference"
            }
          ],
          "feature": [
            {
              "name": "lvef",
              "path": "Observation.component.where(code.coding.exists(system='http://loinc.org' and code='8806-2')).valueQuantity.value.first()"
            },
            {
              "name": "time",
              "path": "Observation.effectiveDateTime"
            }
          ]
        }
      ]
    }
  ]
}
