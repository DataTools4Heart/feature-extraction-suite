{
  "url": "https://datatools4heart.eu/feature-groups/study1/smoking_status",
  "name": "smoking_status",
  "title": "Smoking status",
  "description": "Smoking status related features",
  "version": "0.1",
  "status": "draft",
  "date": "2025-02-20",
  "publisher": "DataTools4Heart WP2 Team (SRDC Corp.)",
  "entity": [
    {
      "name": "pid",
      "description": "A unique identifier assigned to each patient in the cohort."
    },
    {
      "name": "encounterId",
      "description": "A unique identifier for each hospital encounter."
    }
  ],
  "eventTime": {
    "start": "startTime",
    "end": "endTime"
  },
  "feature": [
    {
      "name": "startTime",
      "title": "Period start time",
      "description": "Start date of the period of smoking",
      "dataType": "dateTime"
    },
    {
      "name": "endTime",
      "title": "Period end time",
      "description": "End date of the period of smoking",
      "dataType": "dateTime"
    },
    {
      "name": "code",
      "title": "Smoking status code",
      "description": "A SNOMED code representing the individual's smoking status.",
      "dataType": "code"
    }
  ],
  "pipeline": [
    {
      "interface": "FHIR",
      "supportedVersions": [
        "R5"
      ],
      "pipeline": [
        {
          "description": "Extract the features from Smoking Status Observation.",
          "resourceType": "Observation",
          "targetProfile": "https://datatools4heart.eu/fhir/StructureDefinition/HFR-SmokingStatus",
          "query": "?code=72166-2",
          "entityLink": [
            {
              "entity": "pid",
              "entityType": "Patient",
              "searchParam": "patient",
              "path": "Observation.subject.reference"
            },
            {
              "entity": "encounterId",
              "entityType": "Encounter",
              "searchParam": "encounter",
              "path": "Observation.encounter.reference"
            }
          ],
          "feature": [
            {
              "name": "code",
              "path": "Observation.valueCodeableConcept.coding.where(system='http://snomed.info/sct').first().code"
            },
            {
              "name": "startTime",
              "path": "Observation.effectivePeriod.start"
            },
            {
              "name": "endTime",
              "path": "Observation.effectivePeriod.end"
            }
          ]
        }
      ]
    }
  ]
}
